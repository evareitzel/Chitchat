  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.9",
    "react-router-dom": "^6.13.0",
    "react-scripts": "^5.0.1",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
